= form_for @driver, html: {class: "form-horizontal"} do |f|
  .control-group
    =f.label :name, class: "control-label"
  .controls
    =f.text_field :name
  .control-group
    =f.label :team, class: "control-label"
  .controls
    =f.text_field :team
  .control-group
  .controls
    =f.submit "Save", class: "btn btn-primary"