#index-others
  .row
    .span12
      .page-header
        %h1 
          %i.icon-trophy 
          Drivers
        =link_to "Add Driver", new_driver_path, class: "btn btn-primary"
      %table.table
        %thead
          %tr
            %th Driver Name
            %th Team
        %tbody
          - @drivers.each do |driver|
            %tr
              %td= driver.name
              %td= driver.team
              %td= link_to "Edit Driver", edit_driver_path(driver)
              %td= link_to "Delete Driver", driver_path(driver), method: :delete
