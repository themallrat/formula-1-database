= form_for @race, html: {class: "form-horizontal"} do |f|
  .control-group
    =f.label :name, class: "control-label"
  .controls
    =f.text_field :name
  .control-group
    =f.label :date, class: "control-label"
  .controls
    =f.text_field :date
  .control-group
  .controls
    =f.submit "Save", class: "btn btn-primary"