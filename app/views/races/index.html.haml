.row
  .span12
    .page-header
      %h1 
        %i.icon-calendar
        Calendar
      =link_to "Add Race", new_race_path, class: "btn btn-primary"
    %table.table
      %thead
        %th Name
        %th Date
      %tbody
        - @races.each do |race|
          %tr
            %td= race.name
            %td= race.date
            %td= link_to "Edit Race", edit_race_path(race)
            %td= link_to "Delete Race", race_path(race), method: :delete
